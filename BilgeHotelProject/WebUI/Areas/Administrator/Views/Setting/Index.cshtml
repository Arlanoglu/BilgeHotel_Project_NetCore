@model VMSettingCreateUpdate
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Smtp Yönetimi</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Administrator/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Smtp Yönetimi</li>
                </ol>
            </div><!-- /.col -->
            <div class="col-12">
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="container">
    @if (ViewBag.SettingResult != null)
    {
        <div class="row mb-3">
            @if (ViewBag.SettingResult.ResultStatus == ResultStatus.Success)
            {
                <div class="col alert-success">
                    <span>@ViewBag.SettingResult.Message</span>
                </div>
            }
            else
            {
                <div class="col alert-danger">
                    <span>@ViewBag.SettingResult.Message</span>
                </div>
            }
        </div>
    }

    <section id="contact" class="contact">
        <div class="container">
            <div class="row justify-content-center" data-aos="fade-up">
                <div class="col-10 php-email-form">
                    @if (Model != null)
                    {
                        <form asp-action="UpdateSetting" asp-controller="Setting" method="post">
                            <input asp-for="SettingID" type="hidden" value="@Model.SettingID" />
                            <div asp-validation-summary="All">

                            </div>
                            <div class="form-row">
                                <div class="col-md-6 form-group">
                                    <label class="col-form-label">SmtpHost (Zorunlu)</label>
                                    <input asp-for="SmtpHost" class="form-control" type="text" />
                                </div>
                                <div class="col-md-6 form-group">
                                    <label class="col-form-label">SmtpPort (Zorunlu)</label>
                                    <input asp-for="SmtpPort" class="form-control" type="number"  min="1" />
                                </div>
                                <div class="col-md-6 form-group">
                                    <label class="col-form-label">SmtpEmail (Zorunlu)</label>
                                    <input asp-for="SmtpEmail" class="form-control" type="email" />
                                </div>
                                <div class="col-md-6 form-group">
                                    <label class="col-form-label">SmtpPassword (Zorunlu)</label>
                                    <input asp-for="SmtpPassword" class="form-control" type="text" />
                                </div>
                                <div class="col-12 form-group d-flex justify-content-center">
                                    <button class="btn btn-primary" type="submit">Güncelle</button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <h5>Kayıtlı Smtp bilgisi bulunamadı. Bilgileri kaydetmek için formu doldurun ve kaydedin.</h5>
                        <form asp-action="SettingCreate" asp-controller="Setting" method="post">
                            <div asp-validation-summary="All">

                            </div>
                            <div class="form-row">
                                <div class="col-md-6 form-group">
                                    <label class="col-form-label">SmtpHost (Zorunlu)</label>
                                    <input asp-for="SmtpHost" class="form-control" type="text" />
                                </div>
                                <div class="col-md-6 form-group">
                                    <label class="col-form-label">SmtpPort (Zorunlu)</label>
                                    <input asp-for="SmtpPort" class="form-control" type="number" min="1" />
                                </div>
                                <div class="col-md-6 form-group">
                                    <label class="col-form-label">SmtpEmail (Zorunlu)</label>
                                    <input asp-for="SmtpEmail" class="form-control" type="email" />
                                </div>
                                <div class="col-md-6 form-group">
                                    <label class="col-form-label">SmtpPassword (Zorunlu)</label>
                                    <input asp-for="SmtpPassword" class="form-control" type="text" />
                                </div>
                                <div class="col-12 form-group d-flex justify-content-center">
                                    <button class="btn btn-primary" type="submit">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </section>

</div>


