@model VMContactCreateUpdate
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">İletişim Bilgileri Yönetimi</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Administrator/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">İletişim Bilgileri Yönetimi</li>
                </ol>
            </div><!-- /.col -->
            <div class="col-12">
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="container">
    @if (ViewBag.ContactResult != null)
    {
        <div class="row mb-3">
            @if (ViewBag.ContactResult.ResultStatus == ResultStatus.Success)
            {
                <div class="col alert-success">
                    <span>@ViewBag.ContactResult.Message</span>
                </div>
            }
            else
            {
                <div class="col alert-danger">
                    <span>@ViewBag.ContactResult.Message</span>
                </div>
            }
        </div>
    }

    <section id="contact" class="contact">
        <div class="container">
            <div class="row justify-content-center" data-aos="fade-up">
                <div class="col-10 php-email-form">
                    @if (Model != null)
                    {
                        <form asp-action="UpdateContact" asp-controller="Contact" method="post">
                            <input asp-for="ContactID" type="hidden" value="@Model.ContactID" />
                            <div asp-validation-summary="All">

                            </div>
                            <div class="form-row">
                                <div class="col-md-4 form-group">
                                    <label class="col-form-label">Telefon No (Zorunlu)</label>
                                    <input asp-for="Phone1" class="form-control" type="tel" placeholder="05555555555" />
                                </div>
                                <div class="col-md-4 form-group">
                                    <label class="col-form-label">Telefon No 2</label>
                                    <input asp-for="Phone2" class="form-control" type="tel" placeholder="05444444444" />
                                </div>
                                <div class="col-md-4 form-group">
                                    <label class="col-form-label">Fax</label>
                                    <input asp-for="Fax" class="form-control" type="tel" placeholder="053333333333" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">Eposta (Zorunlu)</label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">Facebook Adres</label>
                                    <input asp-for="Facebook" class="form-control" type="text" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">İnstagram Adres</label>
                                    <input asp-for="Instagram" class="form-control" type="text" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">Twitter Adres</label>
                                    <input asp-for="Twitter" class="form-control" type="text" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">Adres (Zorunlu)</label>
                                    <textarea asp-for="Adress" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="col-12 form-group d-flex justify-content-center">
                                    <button class="btn btn-primary" type="submit">Güncelle</button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <h5>Kayıtlı iletişim bilgisi bulunamadı. Bilgileri kaydetmek için formu doldurun ve kaydedin.</h5>
                        <form asp-action="ContactCreate" asp-controller="Contact" method="post">
                            <div asp-validation-summary="All">

                            </div>
                            <div class="form-row">
                                <div class="col-md-4 form-group">
                                    <label class="col-form-label">Telefon No (Zorunlu)</label>
                                    <input asp-for="Phone1" class="form-control" type="tel" placeholder="05555555555" />
                                </div>
                                <div class="col-md-4 form-group">
                                    <label class="col-form-label">Telefon No 2</label>
                                    <input asp-for="Phone2" class="form-control" type="tel" placeholder="05444444444" />
                                </div>
                                <div class="col-md-4 form-group">
                                    <label class="col-form-label">Fax</label>
                                    <input asp-for="Fax" class="form-control" type="tel" placeholder="053333333333" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">Eposta (Zorunlu)</label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">Facebook Adres</label>
                                    <input asp-for="Facebook" class="form-control" type="text" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">İnstagram Adres</label>
                                    <input asp-for="Instagram" class="form-control" type="text" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">Twitter Adres</label>
                                    <input asp-for="Twitter" class="form-control" type="text" />
                                </div>
                                <div class="col-md-12 form-group">
                                    <label class="col-form-label">Adres (Zorunlu)</label>
                                    <textarea asp-for="Adress" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="col-12 form-group d-flex justify-content-center">
                                    <button class="btn btn-primary" type="submit">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </section>

</div>


