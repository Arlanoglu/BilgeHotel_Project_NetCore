@model VMHotelServiceUpdate
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Hizmetler İçerik Güncelle</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Administrator/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Hizmetler İçerik Güncelle</li>
                </ol>
            </div><!-- /.col -->
            <div class="col-12">
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="container">
    @if (ViewBag.ServiceResult != null)
    {
        <div class="row mb-3">
            @if (ViewBag.ServiceResult.ResultStatus == ResultStatus.Success)
            {
                <div class="col alert-success">
                    <span>@ViewBag.ServiceResult.Message</span>
                </div>
            }
            else
            {
                <div class="col alert-danger">
                    <span>@ViewBag.ServiceResult.Message</span>
                </div>
            }
        </div>
    }

    <section id="contact" class="contact">
        <div class="container">
            <div class="row justify-content-center" data-aos="fade-up">
                <div class="col-10 php-email-form">
                    <a asp-action="Index" asp-controller="HotelService" class="btn btn-info"><i class="nav-icon far ion-arrow-left-b"></i> Geri</a>
                    <form asp-action="UpdateService" asp-controller="HotelService" method="post" enctype="multipart/form-data">
                        <input asp-for="ServiceID" type="hidden" value="@Model.ServiceID" />
                        <div asp-validation-summary="All">

                        </div>
                        <div class="form-row">
                            <div class="col-md-12 form-group">
                                <input type="file" name="file" class="custom-file-input" accept="image/png, image/jpeg, image/jpg" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03">
                                <label class="custom-file-label" for="inputGroupFile03">Görsel Seç</label>
                            </div>
                            <div class="col-md-12 form-group">
                                <label class="col-form-label">Hizmet Adı</label>
                                <input asp-for="ServiceName" class="form-control" type="text" placeholder="Zorunlu" />
                            </div>
                            <div class="col-md-12 form-group">
                                <label class="col-form-label">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="col-12 form-group d-flex justify-content-center">
                                <button class="btn btn-primary" type="submit">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

</div>

