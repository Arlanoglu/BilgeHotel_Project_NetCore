@model VMRoomType
@{
    ViewData["Title"] = "RoomTypeUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <a asp-action="RoomTypeDetail" asp-controller="RoomType" asp-route-id="@Model.ID" class="btn btn-info mb-3"><i class="nav-icon far ion-arrow-left-b"></i> Geri</a>
    <form asp-action="Update" asp-controller="RoomType" method="post">
        <input asp-for="Status" type="hidden" value="@Model.Status" />
        <input asp-for="ID" type="hidden" value="@Model.ID" />
        <div asp-validation-summary="All">

        </div>
        <div class="form-row">
            <div class="col-md-6 form-group">
                <label class="col-form-label">Oda Tip Adı</label>
                <input asp-for="RoomTypeName" class="form-control" type="text" />
            </div>
            <div class="col-md-6 form-group">
                <label class="col-form-label">Oda Tip Fiyatı</label>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @type = "currency" })
            </div>
            <div class="col-md-6 form-group">
                <label class="col-form-label">Kişi Sayısı</label>
                <input asp-for="NumberOfPeople" class="form-control" type="number" min="1" />
            </div>
            <div class="col-md-6 form-group">
                <label class="col-form-label">Yatak Sayısı</label>
                <input asp-for="NumberOfBed" class="form-control" type="number" min="1" />
            </div>
            <div class="col-12 form-group">
                <label class="col-form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
            <div class="col-12 form-group d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">Güncelle</button>
            </div>
        </div>
    </form>
</div>


