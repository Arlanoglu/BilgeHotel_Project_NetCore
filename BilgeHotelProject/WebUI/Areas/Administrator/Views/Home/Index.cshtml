@section DataTable{
    <script>
        $(document).ready(function () {
            $.ajax({
                type: 'Get',
                url: 'https://localhost:44321/Administrator/Home/GetCurrencyRate',
                dataType: "json",
                success: function (data) {

                    console.log(data)
                    $.each(data, function (id, value) {
                        if (value.CurrencyCode == "USD") {
                            $("#usd").text(value.ForexBuying);
                        }
                        else if (value.CurrencyCode == "EUR") {
                            $("#eur").text(value.ForexBuying);
                        }
                        else if (value.CurrencyCode == "GBP") {
                            $("#gbp").text(value.ForexBuying);
                        }
                        else if (value.CurrencyCode == "SAR") {
                            $("#sar").text(value.ForexBuying);
                        }
                    })

                }

            })

        })
    </script>
}