@model VMRoomFacility
@{
    ViewData["Title"] = "UpdateRoomFacility";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Oda Olanağı Güncelle</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Administrator/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Oda Olanağı Güncelle</li>
                </ol>
            </div><!-- /.col -->
            <div class="col-12">
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="container">
    @if (ViewBag.RoomFacilityResult != null)
    {
        <div class="row mb-3">
            @if (ViewBag.RoomFacilityResult.ResultStatus == ResultStatus.Success)
            {
                <div class="col alert-success">
                    <span>@ViewBag.RoomFacilityResult.Message</span>
                </div>
            }
            else
            {
                <div class="col alert-danger">
                    <span>@ViewBag.RoomFacilityResult.Message</span>
                </div>
            }
        </div>
    }
    <a asp-action="Index" asp-controller="RoomFacility" class="btn btn-info"><i class="nav-icon far ion-arrow-left-b"></i> Oda Olanakları</a>
    <form asp-action="UpdateRoomFacility" asp-controller="RoomFacility" method="post">
        <input asp-for="ID" type="hidden" value="@Model.ID" />
        <div asp-validation-summary="All">

        </div>
        <div class="form-row d-flex justify-content-center">
            <div class="col-md-6">
                <div class="col-12 form-group">
                    <label class="col-form-label">Olanak Adı</label>
                    <input asp-for="FacilityName" class="form-control" type="text" min="1" />
                </div>
                <div class="col-md-12 form-group">
                    <label class="col-form-label">Açıklama</label>
                    <textarea class="form-control" rows="4" asp-for="Description"></textarea>
                </div>
                <div class="col-12 form-group d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit">Güncelle</button>
                </div>
            </div>
        </div>
    </form>
</div>


