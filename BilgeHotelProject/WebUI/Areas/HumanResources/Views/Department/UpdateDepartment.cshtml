@model VMDepartmentUpdate
@{
    ViewData["Title"] = "UpdateDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Departmanlar</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Administrator/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Departmanlar</li>
                </ol>
            </div><!-- /.col -->
            <div class="col-12">
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="container">
    <a asp-action="CreateDepartment" asp-controller="Department" class="btn btn-info mb-3"><i class="nav-icon far ion-arrow-left-b"></i> Departmanlar</a>
    @if (ViewBag.DepartmentResult != null)
    {
        <div class="row">
            @if (ViewBag.DepartmentResult.ResultStatus == ResultStatus.Success)
            {
                <div class="col alert-success">
                    <span>@ViewBag.DepartmentResult.Message</span>
                </div>
            }
            else
            {
                <div class="col alert-danger">
                    <span>@ViewBag.DepartmentResult.Message</span>
                </div>
            }
        </div>
    }

    <div class="row">
        <div class="col-12">
            <h3 class="text-center font-weight-bold">Departman Güncelle</h3>
        </div>
    </div>

    <form asp-action="UpdateDepartment" asp-controller="Department" method="post">
        <input asp-for="ID" type="hidden" value="@Model.ID" />
        <div asp-validation-summary="All">

        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                <div class="form-row">
                    <div class="col-md-12 form-group">
                        <label class="col-form-label">Departman Adı</label>
                        <input asp-for="DepartmentName" class="form-control" type="text" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label class="col-form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    </div>
                    <div class="col-12 form-group d-flex justify-content-center">
                        <button class="btn btn-primary" type="submit">Güncelle</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>

