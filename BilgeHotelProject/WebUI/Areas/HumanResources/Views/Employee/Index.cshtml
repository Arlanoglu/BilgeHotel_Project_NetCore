@model List<VMEmployeeList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Çalışanlar</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/HumanResources/Home/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Çalışanlar</li>
                </ol>
            </div><!-- /.col -->
            <div class="col-12">
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="container">
    <a class="btn btn-primary mb-3" href="/HumanResources/Employee/AddEmployee">Çalışan Ekle</a>
    @if (ViewBag.EmployeeResult != null)
    {
        <div class="row">
            @if (ViewBag.EmployeeResult.ResultStatus == ResultStatus.Success)
            {
                <div class="col alert-success">
                    <span>@ViewBag.EmployeeResult.Message</span>
                </div>
            }
            else
            {
                <div class="col alert-danger">
                    <span>@ViewBag.EmployeeResult.Message</span>
                </div>
            }
        </div>
    }
    <!-- /.card -->

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Halen çalışıyor durumda olan çalışanların listesi.</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered table-hover" id="example2">
                <thead>
                    <tr>
                        <th scope="col">Kimlik No</th>
                        <th scope="col">İsim Soyisim</th>
                        <th scope="col">Görevi</th>
                        <th scope="col">Departman</th>
                        <th scope="col">Vardiya</th>
                        <th scope="col">Statüsü</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.IdentificationNumber</th>
                                <td>@item.FullName</td>
                                <td>@item.Title</td>
                                <td>@item.DepartmentName</td>
                                <td>@item.ShiftName</td>
                                <td>@item.EmployeeStatus</td>                                
                                <td>
                                    <a asp-action="EmployeeDetail" asp-controller="Employee" asp-route-id="@item.ID" class="btn btn-primary">Detay</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@section dataTable{
    <script>
        $(function () {
            $('#example2').DataTable(
                //{
                //"paging": true,
                //"lengthChange": false,
                //"searching": false,
                //"ordering": true,
                //"info": true,
                //"autoWidth": false,
                //"responsive": true,
                //}
            );
        });
    </script>
}


