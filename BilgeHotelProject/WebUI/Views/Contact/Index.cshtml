@model VMContact
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
    <!-- ======= Contact Section ======= -->
    <div class="inner-banner inner-bg7">
        <div class="container">
            <div class="inner-title">
                <ul>
                    <li>
                        <a href="/Home/Index">Ana Sayfa</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>İletişim</li>
                </ul>
                <h3>İletişim</h3>
            </div>
        </div>
    </div>


    <section id="contact" class="contact">
        <div class="container">

            <div class="row justify-content-center" @*data-aos="fade-up"*@>

                <div class="col-lg-10">

                    <div class="info-wrap">
                        <div class="row">
                            <div class="col-lg-4 info">
                                <i class="icofont-google-map"></i>
                                <h4>Adres:</h4>
                                @if (Model != null && Model.Adress != null)
                                {
                                    <p>@Model.Adress</p>
                                }
                            </div>

                            <div class="col-lg-4 info mt-4 mt-lg-0">
                                <i class="icofont-envelope"></i>
                                <h4>Eposta:</h4>
                                @if (Model != null && Model.Email != null)
                                {
                                    <p>@Model.Email</p>
                                }
                            </div>

                            <div class="col-lg-4 info mt-4 mt-lg-0">
                                <i class="icofont-phone"></i>
                                <h4>Telefon:</h4>
                                @if (Model != null && Model.Phone1 != null)
                                {
                                    <p>@Model.Phone1</p>
                                }
                                @if (Model != null && Model.Phone2 != null)
                                {
                                    <p>@Model.Phone2</p>
                                }
                            </div>
                        </div>
                    </div>

                </div>


            </div>

            <!--SenMessageContent-->
            <div class="row mt-5 justify-content-center">
                <div class="col-lg-10">
                    <form asp-controller="Contact" asp-action="Index" class="php-email-form">

                        @if (ViewBag.MessageResult != null)
                        {
                            <div class="row mb-3">
                                @if (ViewBag.MessageResult.ResultStatus == ResultStatus.Success)
                                {
                                    <div class="col alert-success">
                                        <span>@ViewBag.MessageResult.Message</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="col alert-danger">
                                        <span>@ViewBag.MessageResult.Message</span>
                                    </div>
                                }
                            </div>
                        }
                        <div asp-validation-summary="All">

                        </div>
                        @await Component.InvokeAsync("SendMessage")
                    </form>
                </div>

            </div>
            <!--EndSendMessageContent-->
        </div>
    </section><!-- End Contact Section -->
</main>

