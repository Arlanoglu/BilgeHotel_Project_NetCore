@model VMHomeIndex
@{
    ViewData["Title"] = "Ana Sayfa";
}

<!--<!-- ======= Carousel ======= -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @{
            int number = 1;
            if (Model.VMHomePage.VMHomePageSlide.Count > 0)
            {
                @foreach (var item in Model.VMHomePage.VMHomePageSlide)
                {

                    if (number == 1)
                    {
                        <div class="carousel-item active">
                            <img src="@item.PictureUrl" class="d-block w-100" alt="@item.PictureName">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@item.PictureUrl" class="d-block w-100" alt="@item.PictureName">
                        </div>
                    }
                    number++;
                }
            }
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- End Carousel -->

<main id="main">

    <!-- ======= About Us Section ======= -->
    <section id="about-us" class="about-us">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                @{
                    if (Model.VMHomePage.Title != null)
                    {
                        <h2><strong>@Model.VMHomePage.Title</strong></h2>
                    }
                }
            </div>
            
            <div class="row content">
                <div class="col-lg-6" data-aos="fade-right">
                    @{
                        if (Model.VMHomePage.PictureUrl != null)
                        {
                            <img src="@Model.VMHomePage.PictureUrl" class="img-fluid">
                        }
                    }
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0" data-aos="fade-left">
                    @{
                        if (Model.VMHomePage.Title != null)
                        {
                            <h4 class="font-italic">Bilge Hotel'e Hoşgeldiniz...</h4>
                        }
                        if (Model.VMHomePage.Paragraph1 != null)
                        {
                            <p>@Model.VMHomePage.Paragraph1</p>
                        }
                        if (Model.VMHomePage.Paragraph2 != null)
                        {
                            <p>@Model.VMHomePage.Paragraph2</p>
                        }
                        if (Model.VMHomePage.Paragraph3 != null)
                        {
                            <p>@Model.VMHomePage.Paragraph3</p>
                        }
                        if (Model.VMHomePage.Paragraph4 != null)
                        {
                            <p>@Model.VMHomePage.Paragraph4</p>
                        }
                        if (Model.VMHomePage.Paragraph5 != null)
                        {
                            <p>@Model.VMHomePage.Paragraph5</p>
                        }
                    }
                </div>
            </div>

        </div>
    </section><!-- End About Us Section -->
    <!-- ======= Portfolio Section ======= -->
    <section id="rooms-sec" class="rooms-sec">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2>Odalarımız</h2>
            </div>


            <div class="row pt-35">
                @foreach (var item in Model.VMRoomTypes)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="room-card">
                            <a href="/Room/RoomDetail/@item.ID">
                                <img style="height:14rem" src="@item.VMRoomPictures.FirstOrDefault().PictureUrl" alt="Images" class="img-fluid">
                            </a>
                            <div class="content">
                                <h3><a href="/Room/RoomDetail/@item.ID">@item.RoomTypeName</a></h3>
                                <ul>
                                    <li>@item.Price.ToString("C2")</li>
                                    <li>Gecelik</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>


        </div>
    </section><!-- End Portfolio Section -->

</main><!-- End #main -->
