@model VMWebReservation
@{
    ViewData["Title"] = "Rezervasyon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row justify-content-center" data-aos="fade-up">
        <div class="col-lg-10">

            <div class="info-wrap">
                <form class="php-email-form" asp-controller="Reservation" asp-action="WebReservationComplete">
                    <div class="form-row">
                        <div class="col-md-3 form-group">
                            <label class="col-form-label" asp-for="CheckInDate">Giriş Tarihi</label>
                            @if (Model.CheckInDate.ToString() != null)
                            {
                                <input class="form-control" asp-for="CheckInDate" type="date" id="checkinDate" value="@Model.CheckInDate.ToString("yyyy-MM-dd")">
                            }
                            else
                            {
                                <input class="form-control" asp-for="CheckInDate" type="date" id="checkinDate" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                            }
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="col-form-label" asp-for="CheckOutDate">Çıkış Tarihi</label>
                            @if (Model.CheckOutDate.ToString() != null)
                            {
                                <input class="form-control" asp-for="CheckOutDate" type="date" id="checkoutDate" value="@Model.CheckOutDate.ToString("yyyy-MM-dd")">
                            }
                            else
                            {
                                <input class="form-control" asp-for="CheckOutDate" type="date" id="checkoutDate" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                            }
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="col-form-label" asp-for="NumberOfPeople">Kişi Sayısı</label>
                            <select asp-for="NumberOfPeople" class="form-control">
                                @for (int i = 1; i <= ViewBag.RoomTypeName.NumberOfPeople; i++)
                                {
                                    <option>@i</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 form-group">
                            <label class="col-form-label" asp-for="ServicePackID">Hizmet Paketi</label>
                            <select asp-for="ServicePackID" class="form-control">
                                @if (ViewBag.ServicePacks.Count > 0)
                                {
                                    @foreach (var item in ViewBag.ServicePacks as List<VMServicePack>)
                                    {
                                        <option>@item.PackName</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>

