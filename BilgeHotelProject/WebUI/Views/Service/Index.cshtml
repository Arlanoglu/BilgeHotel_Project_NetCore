@model List<VMHotelService>
@{
    ViewData["Title"] = "Hizmetler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
    <!--SubHeader-->
    <div class="inner-banner inner-bg7">
        <div class="container">
            <div class="inner-title">
                <ul>
                    <li>
                        <a href="index.html">Ana Sayfa</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>Hizmetler</li>
                </ul>
                <h3>Hizmetler</h3>
            </div>
        </div>
    </div><!--EndSubHeader-->


    <div class="services-area-two pt-100 pb-70">
        <div class="container">
            <div class="section-title text-center">
                <span class="sp-color">Hizmetler</span>
                <h2>Resort Hizmetlerimiz</h2>
            </div>
            <div class="row pt-45">
                @foreach (var item in Model)
                {
                    @if (item.ServiceName != null)
                    {
                        <div class="col-lg-4 col-sm-6">
                            <div class="services-card h-75">
                                <img style="width:50px; height:50px" src="@item.IconPicture" alt="@item.ServiceName" />
                                <h3>@item.ServiceName</h3>
                            </div>
                        </div>
                    }
                }

                <div class="col-lg-12 col-md-12">

                </div>
            </div>
        </div>
    </div>

</main><!-- End #main -->
