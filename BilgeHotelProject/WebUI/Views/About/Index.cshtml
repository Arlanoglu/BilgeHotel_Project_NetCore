@model VMAboutus
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <div class="inner-banner inner-bg7">
        <div class="container">
            <div class="inner-title">
                <ul>
                    <li>
                        <a href="~/Home/Index">Ana Sayfa</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>Hakkımızda</li>
                </ul>
                <h3>Hakkımızda</h3>
            </div>
        </div>
    </div>


    <div class="about-area pt-100 pb-70">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="about-img">
                        @if (Model.PictureUrl != null)
                        {
                            <img src="@Model.PictureUrl" class="img-fluid">
                        }
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-content">
                        <div class="section-title-1">
                            @if (Model.Title != null)
                            {
                                <h2>@Model.Title</h2>
                            }
                            @if (Model.Paragraph1 != null)
                            {
                                <p>@Model.Paragraph1</p>
                            }
                            @if (Model.Paragraph2 != null)
                            {
                                <p>@Model.Paragraph2</p>
                            }
                            @if (Model.Paragraph3 != null)
                            {
                                <p>@Model.Paragraph3</p>
                            }
                            @if (Model.Paragraph4 != null)
                            {
                                <p>@Model.Paragraph4</p>
                            }
                            @if (Model.Paragraph5 != null)
                            {
                                <p>@Model.Paragraph5</p>
                            }

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <section id="portfolio" class="portfolio">
            <div class="container">
                <div class="section-title" data-aos="fade-up">
                    <h2>Galeri</h2>
                </div>
                <div class="row portfolio-container" style="position: relative; height: 1800px;">

                    @foreach (var item in Model.VMPictures)
                    {
                        if (item.PictureUrl != null)
                        {
                            <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                                <div class="portfolio-wrap">
                                    <img style="height:14rem" src="@item.PictureUrl" class="img-fluid w-100" alt="@item.PictureName">
                                    <div class="portfolio-info">
                                        <div class="portfolio-links">
                                            <a href="@item.PictureUrl" data-gall="portfolioGallery" class="venobox"><i class="icofont-expand"></i></a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </section>
    </div>
</main>